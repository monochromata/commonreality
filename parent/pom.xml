			</dependency>
			<dependency>
				<groupId>org.commonreality</groupId>
				<artifactId>modalities.spatial</artifactId>
				<version>${commonreality.version}</version>
			</dependency>
			<dependency>
				<groupId>org.commonreality</groupId>
				<artifactId>net</artifactId>
				<version>${commonreality.version}</version>
			</dependency>
