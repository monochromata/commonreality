			<dependency>
				<groupId>org.commonreality</groupId>
				<artifactId>netty</artifactId>
				<version>${commonreality.version}</version>
			</dependency>
			<dependency>
				<groupId>org.commonreality</groupId>
				<artifactId>sensors</artifactId>
				<version>${commonreality.version}</version>
			</dependency>
